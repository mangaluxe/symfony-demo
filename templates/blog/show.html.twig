{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    {# Affiche un article #}

    <articles>
        <h2>{{ article.title }}</h2>

        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}

        <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y à H:i:s') }} dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="{{ article.title }}">
            <p>{{ article.content | raw }}</p>
        </div>
    </article>

    <div>

        <a href="{{ path('blog_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier</a> <!-- Token pour Edit ajouté automatiquement, car c'est sur une page à éditer -->

        {# <a href="{{ path('blog_delete', {'id': article.id}) }}" class="btn btn-danger">Effacer</a> #}

        <!-- Ajout manuel d'un Token pour Delete : -->
        <form method="post" action="{{ path('blog_delete', {id: article.id}) }}" onsubmit="return confirm('Effacer ?')">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>

    </div>

    <section id="commentaires">
        {% for comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                    {{ comment.author }} ({{ comment.createdAt | date('d/m/Y à H:i:s') }})
                    </div>
                    <div class="col">
                    {{ comment.content | raw }})
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock %}
